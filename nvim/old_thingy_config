filetype plugin indent on
syntax on
set shortmess="c"
set hidden
set fileencoding="utf-8"

set relativenumber
set scrolloff=15
set nobackup
set noswapfile
set termguicolors

set signcolumn
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set expandtab

set pumheight=10
set cmdheight=2
set conceallevel=0
set showtabline=2
